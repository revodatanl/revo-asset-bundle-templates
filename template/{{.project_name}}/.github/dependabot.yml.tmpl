version: 2
updates:
  - package-ecosystem: github-actions
    directory: .
    schedule:
      interval: daily
    groups:
      actions-deps:
        patterns:
          - "*"
  - package-ecosystem: pip
    directory: .
    schedule:
      interval: daily
      groups:
      dev-deps:
        dependency-type: development
        exclude-patterns:
          - pyspark* # Fixed at Databricks Runtime 15.4 LTS
      prod-deps:
        dependency-type: production
        exclude-patterns:
          - pyspark* # Fixed at Databricks Runtime 15.4 LTS
