name: CI

on:
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  ci:
    runs-on: ubuntu-latest
    environment: test

    permissions:
      contents: read
      id-token: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install uv
        run: |
          curl -LsSf https://astral.sh/uv/install.sh | sh
          echo "$HOME/.cargo/bin" >> $GITHUB_PATH

      - name: Install Databricks CLI
        shell: bash
        run: |
          curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sudo sh
          databricks version

      - name: Install development environment from uv.lock
        run: uv sync --frozen

      - name: Run formatting checks
        run: |
          set -e
          echo "Running ruff"
          uv run ruff check --output-format=github .
          echo "Running mypy"
          uv run mypy .
          echo "Running pydoclint"
          uv run pydoclint .
          echo "Formatting checks passed ✅"

      - name: Build and validate package
        run: |
          set -e
          echo "Building package"
          uv build
          echo "Unpacking package"
          tar -xvzf dist/{{template `package_name` .}}-*.tar.gz
          echo "Validating package"
          diff -r -x __pycache__ src {{template `package_name` .}}-*/src
          echo "Package validated ✅"

      - name: Run unit tests
        run: |
          set -e
          uv run pytest -v tests --cov=src --cov-report=term
          echo "Unit tests passed ✅"
        env:
          PYTHONPATH: ${{ "{{" }} github.workspace {{ "}}" }}/src
          DATABRICKS_HOST: ${{ "{{" }} secrets.DATABRICKS_HOST {{ "}}" }}
          DATABRICKS_CLIENT_ID: ${{ "{{" }} secrets.DATABRICKS_CLIENT_ID {{ "}}" }}
          DATABRICKS_CLIENT_SECRET: ${{ "{{" }} secrets.DATABRICKS_CLIENT_SECRET {{ "}}" }}

      - name: Validate Databricks bundle
        shell: bash
        run: databricks bundle validate --target test
        env:
          DATABRICKS_HOST: ${{ "{{" }} secrets.DATABRICKS_HOST {{ "}}" }}
          DATABRICKS_CLIENT_ID: ${{ "{{" }} secrets.DATABRICKS_CLIENT_ID {{ "}}" }}
          DATABRICKS_CLIENT_SECRET: ${{ "{{" }} secrets.DATABRICKS_CLIENT_SECRET {{ "}}" }}
